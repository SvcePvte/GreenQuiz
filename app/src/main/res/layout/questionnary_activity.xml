    </RadioGroup>

    <TextView
        android:id="@+id/scoreendirect"
        android:text="[SCORE]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/qestionnary_btn_valider"
        android:text="@string/validate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

