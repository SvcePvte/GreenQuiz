<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:gravity="center">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="375dp"
        android:layout_height="207dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        app:strokeColor="@color/black"
        app:strokeWidth="5dp"
        app:shapeAppearanceOverlay="@style/border_radius" /> // a retirer



    <TextView
        android:id="@+id/presentation_score_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/presentation_score_texte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="425dp"
        android:layout_marginRight="16dp" />


    <Button
        android:id="@+id/result_btn_classement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="275dp"
        android:layout_marginRight="500dp"
        android:padding="16dp"
        android:text="@string/result_see_leaderbord_btn" />

    <Button
        android:id="@+id/result_btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="275dp"
        android:layout_marginRight="250dp"
        android:padding="16dp"
        android:text="@string/register_leaderboard_button" />

    <Button
        android:id="@+id/reslt_btn_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="275dp"
        android:layout_marginRight="50dp"
        android:background="@color/twitter"
        android:backgroundTint="@color/twitter"
        android:padding="16dp"
        android:text="@string/result_btn_twitter" />


</RelativeLayout>